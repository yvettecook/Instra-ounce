<% if user_signed_in? %>
  <%= link_to 'Add a post', new_post_path %>
<% end %>

<% if @posts.any? %>

  <% @posts.each do |post| %>

    <% if post.image != nil %>
      <%= image_tag post.image.url(:thumb) %>
    <% end %>

    <%= post.description %>

    <% if post.user_id != nil %>
      <%= post.user.email %>
    <% end %>

    <% if user_signed_in? && current_user.id == post.user_id %>
      <%= link_to 'Edit post', edit_post_path(post) %>
      <%= link_to 'Delete post', post_path(post), method: :delete %>
    <% end %>

  <% end %>

<% else %>

  No posts yet
  
<% end %>
